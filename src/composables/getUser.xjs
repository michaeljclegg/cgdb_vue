import { ref } from "vue";
import { pAuth } from "../firebase/index";

// refs
const user = ref(pAuth.currentUser);

// auth changes
onAuthStateChanged(pAuth, (_user) => {
  console.log("User state change. Current user is:", _user);
  user.value = _user;
});

const getUser = () => {
  return { user };
};

export default getUser;
